<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Agreements with <%= partyName %> - Swahara</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
    body { font-family: 'Inter', sans-serif; }
    h2 { font-size: 1.5rem; font-weight: 600; line-height: 2rem; }
    h3 { font-size: 1.25rem; font-weight: 600; line-height: 1.75rem; }
    h4 { font-size: 1rem; font-weight: 500; line-height: 1.5rem; }
  </style>
</head>
<body>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 p-8">
    <div class="max-w-4xl mx-auto">
      <a href="/dashboard" class="flex items-center gap-2 text-gray-600 hover:text-gray-900 mb-6 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        <span>Back to Dashboard</span>
      </a>

      <div class="bg-white rounded-3xl shadow-xl p-8 border border-gray-100">
        <h2 class="mb-6">Agreements with <%= partyName %></h2>

        <!-- Party Info Card -->
        <div class="bg-gradient-to-br from-blue-500 to-blue-700 rounded-3xl p-8 text-white shadow-lg mb-8">
          <div class="flex items-center gap-6">
            <div class="w-24 h-24 rounded-full bg-white/20 flex items-center justify-center border-4 border-white/30 shadow-lg">
              <span class="text-4xl font-bold"><%= partyName.split(' ').map(n => n[0]).join('').toUpperCase().slice(0, 2) %></span>
            </div>
            <div class="flex-1">
              <h3 class="text-xl font-medium mb-2"><%= partyName %></h3>
              <p class="text-blue-100">Total Agreements: <%= agreements.length %></p>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6">
              <div class="text-center mb-3">
                <div class="text-3xl font-semibold"><%= agreements.length %></div>
                <div class="text-sm text-blue-100">Total</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-semibold"><%= agreements.filter(a => a.status === 'active').length %></div>
                <div class="text-sm text-blue-100">Active</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Agreements List -->
        <div class="space-y-4">
          <% if (agreements.length === 0) { %>
            <div class="text-center py-16 text-gray-400">
              <p>No agreements with this person</p>
            </div>
          <% } else { %>
            <% agreements.forEach(agreement => { %>
              <a href="/agreements/<%= agreement.id %>" class="block">
                <div class="bg-gray-50 rounded-2xl p-6 hover:bg-gray-100 transition-all cursor-pointer border border-gray-200 hover:shadow-lg">
                  <div class="flex items-start justify-between mb-3">
                    <h4 class="flex-1 mr-4"><%= agreement.title %></h4>
                    <% if (agreement.amount) { %>
                      <span class="font-medium text-blue-600 whitespace-nowrap"><%= agreement.amount %></span>
                    <% } %>
                  </div>
                  <p class="text-sm text-gray-600 mb-4 line-clamp-2"><%= agreement.description %></p>
                  <div class="flex items-center gap-6 text-sm text-gray-500">
                    <% if (agreement.dueDate) { %>
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <span><%= new Date(agreement.dueDate).toLocaleDateString() %></span>
                      </div>
                    <% } %>
                    <div class="px-3 py-1 rounded-full text-xs font-medium <%= agreement.status === 'active' ? 'bg-green-100 text-green-700' : agreement.status === 'pending' ? 'bg-yellow-100 text-yellow-700' : 'bg-red-100 text-red-700' %>">
                      <%= agreement.status %>
                    </div>
                  </div>
                </div>
              </a>
            <% }); %>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
