<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Swahara - Agreement Management' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
    
    body {
      font-family: 'Inter', sans-serif;
    }

    h1 { font-size: 1.875rem; font-weight: 700; line-height: 2.25rem; }
    h2 { font-size: 1.5rem; font-weight: 600; line-height: 2rem; }
    h3 { font-size: 1.25rem; font-weight: 600; line-height: 1.75rem; }
    h4 { font-size: 1rem; font-weight: 500; line-height: 1.5rem; }
  </style>
</head>
<body>
  <div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50">
    <!-- Sidebar -->
    <div class="fixed left-0 top-0 h-full w-64 bg-white border-r border-gray-200 shadow-lg">
      <div class="p-6">
        <div class="flex items-center gap-3 mb-8">
          <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-blue-700 rounded-lg flex items-center justify-center text-white font-bold">S</div>
          <span class="font-medium text-xl">Swahara</span>
        </div>

        <!-- User Profile Section -->
        <div class="bg-gradient-to-br from-blue-500 to-blue-700 rounded-2xl p-4 mb-6 text-white">
          <div class="flex items-center gap-3 mb-3">
            <div class="w-12 h-12 rounded-full overflow-hidden border-2 border-white/30">
              <% if (currentUser && currentUser.avatar) { %>
                <img 
                  src="/uploads/<%= currentUser.avatar %>" 
                  alt="<%= currentUser.name %>" 
                  class="w-full h-full object-cover"
                  onerror="this.onerror=null; this.src=''; this.parentElement.innerHTML='<div class=\'w-full h-full bg-white/20 flex items-center justify-center text-sm font-semibold text-white\'><%= currentUser.initials %></div>';"
                />
              <% } else { %>
                <div class="w-full h-full bg-white/20 flex items-center justify-center text-sm font-semibold text-white">
                  <%= currentUser.initials %>
                </div>
              <% } %>
            </div>
            <div>
              <h3 class="text-sm font-medium"><%= currentUser.name %></h3>
              <p class="text-xs text-blue-100"><%= currentUser.phone %></p>
            </div>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="space-y-2">
          <a href="/dashboard" 
             class="w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-all <%= activePage === 'dashboard' ? 'bg-blue-100 text-blue-700 font-medium' : 'text-gray-600 hover:bg-gray-100' %>">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span>My Agreements</span>
          </a>
          <a href="/create-agreement" 
             class="w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-all <%= activePage === 'create' ? 'bg-blue-100 text-blue-700 font-medium' : 'text-gray-600 hover:bg-gray-100' %>">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            <span>Create Agreement</span>
          </a>
          <a href="/profile" 
             class="w-full flex items-center gap-3 px-4 py-3 rounded-xl transition-all <%= activePage === 'profile' ? 'bg-blue-100 text-blue-700 font-medium' : 'text-gray-600 hover:bg-gray-100' %>">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>Profile</span>
          </a>
        </nav>

        <!-- Logout Button -->
        <a href="/logout" 
           class="w-full flex items-center gap-3 px-4 py-3 rounded-xl text-red-600 hover:bg-red-50 transition-all mt-8">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
          </svg>
          <span>Logout</span>
        </a>
      </div>
    </div>

    <!-- Main Content -->
    <div class="ml-64 p-8">
      <div class="max-w-6xl mx-auto">
        <%- body %>
      </div>
    </div>
  </div>
</body>
</html>
